.show_top.clearfix
  .show_top_image.clearfix
.show_content.clearfix
  .show_content_main
    .show_content_main_left
      .nav
      .title_area
        %h2.title.heavy Secluded Intown Treehouse
        .sub_title
          .roomtype Entire treehouse
          %span ·
          .location Atranta
      .host_image
        .host_image_box
          .host_image_icon
            .host_image_icon_badge
              .host_image_icon_round.media-photo.media-round
                = image_tag("test.jpeg")
              .host_image_name
                %span Katie And Peter
      .room_data
        .room_data_set
          .room_data_set_content
            .icon_box
              %li
                .icon
                  %i{ class:"fa fa-users", aria:{hidden:"true"}}
                .comment
                  %span 2 guets
              %li
                .icon
                  %i{ class:"fa fa-home", aria:{hidden:"true"}}
                .comment
                  %span 1 bet room
              %li
                .icon
                  %i{ class:"fa fa-bed", aria:{hidden:"true"}}
                .comment
                  %span 1 bet
              %li
                .icon
                  %i{ class:"fa fa-bath", aria:{hidden:"true"}}
                .comment
                  %span 1 bath
      .booking_form
        = form_for [@room, @room.room_books.new] do |f|
          = f.text_field :room_id, type:"hidden", value:"#{@room.id}"
          .booking_form_box
            .price
              .price_content ¥ 43,192per night
            .form
              .form_inputarea
                .form_inputarea_check
                  .form_inputarea_check_half
                    .text Check In
                    .inputarea
                      = f.text_field :start_date, data: { date_format: 'YYYY-MM-DD'}, class:"datepicker form-control", id:"datetimepicker6", placeholder:"YYYY-MM-DD"
                  .form_inputarea_check_half
                    .text Check Out
                    .inputarea
                      = f.text_field :end_date, data: { date_format: 'YYYY-MM-DD'}, class:"datepicker form-control", id:"datetimepicker7", placeholder:"YYYY-MM-DD"
                :javascript
                  $(function () {
                      $('#datetimepicker6').datetimepicker();
                      $('#datetimepicker7').datetimepicker({
                          useCurrent: false
                      });
                      $("#datetimepicker6").on("dp.change", function (e) {
                          $('#datetimepicker7').data("DateTimePicker").minDate(e.date);
                      });
                      $("#datetimepicker7").on("dp.change", function (e) {
                          $('#datetimepicker6').data("DateTimePicker").maxDate(e.date);
                      });
                  });
                .form_inputarea_guests
                  .text Guests
                  #input_guests_area
                    %input{class:"input_guests"}
                    #selectarea
                      #select_area_contents
                        %li.list_box
                          .text_area
                            .text Adults
                          .button_area
                            .plus_minus_button
                              .symbol_plus_minus
                                %button{class:"green_circle"}
                                  %span{class:"green_symbol"}
                                    %svg{ viewBox:"0 0 24 24", role:"img", aria:{label:"add"}, focusable:"false", style:"height: 1em; width: 1em; display: block; fill: currentcolor;"}
                                      %rect{ width:"12", height:"2", x:"6", y:"11", rx:"1"}
                            .plus_minus_button
                              .symbol_plus_minus
                                %button{class:"green_circle"}
                                  %span{class:"green_symbol"}
                                    %svg{ viewBox:"0 0 24 24", role:"img", aria:{label:"add"}, focusable:"false", style:"height: 1em; width: 1em; display: block; fill: currentcolor;"}
                                      %rect{ width:"12", height:"2", x:"6", y:"11", rx:"1"}
                                      %rect{ width:"2", height:"12", x:"11", y:"6", rx:"1"}
                        %li.list_box
                          .text_area
                            .text Children
                            .text_comment
                          .button_area
                            .plus_minus_button
                              .symbol_plus_minus
                                %button{class:"green_circle"}
                                  %span{class:"green_symbol"}
                                    %svg{ viewBox:"0 0 24 24", role:"img", aria:{label:"add"}, focusable:"false", style:"height: 1em; width: 1em; display: block; fill: currentcolor;"}
                                      %rect{ width:"12", height:"2", x:"6", y:"11", rx:"1"}
                            .plus_minus_button
                              .symbol_plus_minus
                                %button{class:"green_circle"}
                                  %span{class:"green_symbol"}
                                    %svg{ viewBox:"0 0 24 24", role:"img", aria:{label:"add"}, focusable:"false", style:"height: 1em; width: 1em; display: block; fill: currentcolor;"}
                                      %rect{ width:"12", height:"2", x:"6", y:"11", rx:"1"}
                                      %rect{ width:"2", height:"12", x:"11", y:"6", rx:"1"}
                        .comment 2 guests maximum. Infants don’t count toward the number of guests.
                        .close
              .btn_area
                = f.submit :"Request to Book", class: "btn btn-primary btn-large btn-block"
                .comment You won’t be charged yet
              .host_title
                .grayline
                .textarea
                  .text
                    .text_upper.heavy This home is on people’s minds.
                    .text_bottom It’s been viewed 500+ times in the past week.
          .report
      .descriptions
    .show_content_main_right
